<idea-plugin version="2">
  <id>socrates.tabshifter</id>
  <name>Tab Shifter</name>
  <version>0.1</version>
  <vendor email="dmitry.kandalov@gmail.com" url="https://github.com/dkandalov/tab-shift">Dmitry Kandalov</vendor>

  <description><![CDATA[
      Actions to move and split tabs.<br>
      (This is a copy of <a href="https://gist.github.com/dkandalov/6643735">this mini-plugin</a>.
      Created for <a href="https://twitter.com/sandromancuso">Sandro Mancuso</a> at
      <a href="http://socratesuk.org/">SoCraTes UK 2013</a>.)
  ]]> </description>


  <!-- http://confluence.jetbrains.com/display/IDEADEV/Build+Number+Ranges for description -->
  <idea-version since-build="111"/>

  <!-- http://confluence.jetbrains.com/display/IDEADEV/Plugin+Compatibility+with+IntelliJ+Platform+Products -->
  <depends>com.intellij.modules.lang</depends>

  <actions>
      <action id="TabShiftActions.ShiftLeft" class="socrates.tabshifter.TabShifterActions$ShiftLeft" text="Shift Tab Left">
          <add-to-group group-id="WindowMenu" anchor="last"/>
          <keyboard-shortcut first-keystroke="alt shift OPEN_BRACKET" keymap="$default"/>
      </action>
      <action id="TabShiftActions.ShiftRight" class="socrates.tabshifter.TabShifterActions$ShiftRight" text="Shift Tab Right">
          <add-to-group group-id="WindowMenu" anchor="last"/>
          <keyboard-shortcut first-keystroke="alt shift CLOSE_BRACKET" keymap="$default"/>
      </action>
  </actions>

</idea-plugin>